<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mylog.common.licence.mapper.RoleAccessMapper">
<!--    <resultMap id="systemRoleMap" type="com.mylog.common.licence.entity.Role">-->
<!--    </resultMap>-->

    <sql id="TableField">
        id, access_id, role_id, created_at, updated_at, del_flag
    </sql>

    <sql id="TableName">
        `role_access`
    </sql>

    <select id="getAccessList4Role" resultType="java.lang.Integer">
        select
        `access_id`
        from
        <include refid="TableName" />
        where
        `role_id` = #{roleId}
        and
        `del_flag` = 0;
    </select>

    <update id="logicalDeletionById">
        update
        <include refid="TableName" />
        set
        `del_flag` = 1
        where
        `id` = #{id}
    </update>

</mapper>