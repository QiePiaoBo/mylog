<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mylog.common.licence.mapper.AccessMapper">
    <resultMap id="systemAccessMap" type="com.mylog.common.licence.entity.Access">
    </resultMap>

    <sql id="TableField">
        id, access_code, access_name, access_type, access_uri, access_description, access_status, created_at, updated_at, del_flag
    </sql>

    <sql id="TableName">
        `lgc_access`
    </sql>

    <select id="selectAccessList" resultMap="systemAccessMap">
        SELECT
            <include refid="TableField" />
        FROM
            <include refid="TableName" />
        limit #{myPage.startNo}, #{myPage.pageSize}
    </select>

    <select id="selectAccessTotal" resultType="java.lang.Long">
        SELECT
            count(*)
        FROM
            <include refid="TableName" />
        WHERE
            del_flag = 0
    </select>

    <select id="selectAccessListByIds" resultMap="systemRoleMap">
        select
        <include refid="TableField" />
        from
        <include refid="TableName" />
        where
        `id`
        in
        <foreach collection="ids" item="id" index="index" open="(" close=")" separator=",">
            #{id}
        </foreach>
        and
        `del_flag` = 0
    </select>

    <update id="logicalDeletionById">
        update
            <include refid="TableName" />
        set
            `del_flag` = 1
        where
            `id` = #{id}
    </update>
</mapper>