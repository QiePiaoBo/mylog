<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <!--  数据源、数据模板 配置  -->
    <bean id="batchDataSource" primary="true" class="com.alibaba.druid.pool.DruidDataSource"
          destroy-method="close">
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url">
            <value>
                <![CDATA[ jdbc:mysql://logicer.top:3306/wcb_batch?useSSL=false&serverTimezone=UTC&characterEncoding=utf8 ]]>
            </value>
        </property>
        <property name="username" value="root"/>
        <property name="password" value="1997o4"/>
    </bean>
    <bean id="licDataSource" class="com.alibaba.druid.pool.DruidDataSource"
          destroy-method="close">
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url">
            <value>
                <![CDATA[ jdbc:mysql://logicer.top:3306/ds?useSSL=false&serverTimezone=UTC&characterEncoding=utf8 ]]>
            </value>
        </property>
        <property name="username" value="root"/>
        <property name="password" value="1997o4"/>
    </bean>
    <bean id="blogDataSource" class="com.alibaba.druid.pool.DruidDataSource"
          destroy-method="close">
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url">
            <value>
                <![CDATA[ jdbc:mysql://logicer.top:3306/ds_blog?useSSL=false&serverTimezone=UTC&characterEncoding=utf8 ]]>
            </value>
        </property>
        <property name="username" value="root"/>
        <property name="password" value="1997o4"/>
    </bean>
    <!--  jdbcTemplate * 3  -->
    <bean id="batchJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="batchDataSource"/>
    </bean>
    <bean id="licJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="licDataSource"/>
    </bean>
    <bean id="blogJdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="blogDataSource"/>
    </bean>
    <!-- 配置spring batch的jobRepository，负责与数据库打交道 * 3 -->
    <batch:job-repository id="batchJobRepository"
                          data-source="batchDataSource" transaction-manager="batchTransactionManager"
                          isolation-level-for-create="REPEATABLE_READ" table-prefix="BATCH_"
                          max-varchar-length="1000"/>
<!--    <batch:job-repository id="licJobRepository"-->
<!--                          data-source="licDataSource" transaction-manager="licTransactionManager"-->
<!--                          isolation-level-for-create="REPEATABLE_READ" table-prefix="BATCH_"-->
<!--                          max-varchar-length="1000"/>-->
<!--    <batch:job-repository id="blogJobRepository"-->
<!--                          data-source="blogDataSource" transaction-manager="blogTransactionManager"-->
<!--                          isolation-level-for-create="REPEATABLE_READ" table-prefix="BATCH_"-->
<!--                          max-varchar-length="1000"/>-->
    <!-- spring的事务管理器 * 3 -->
    <bean id="batchTransactionManager"
          class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="batchDataSource"/>
    </bean>
    <bean id="licTransactionManager"
          class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="licDataSource"/>
    </bean>
    <bean id="blogTransactionManager"
          class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="blogDataSource"/>
    </bean>

    <!-- batch luncher * 3 -->
    <bean id="batchJobLauncher"
          class="org.springframework.batch.core.launch.support.SimpleJobLauncher">
        <property name="jobRepository" ref="batchJobRepository"/>
    </bean>
    <!--  暂时用不到下面两个启动器  -->
<!--    <bean id="licJobLauncher"-->
<!--          class="org.springframework.batch.core.launch.support.SimpleJobLauncher">-->
<!--        <property name="jobRepository" ref="licJobRepository"/>-->
<!--    </bean>-->
<!--    <bean id="blogJobLauncher"-->
<!--          class="org.springframework.batch.core.launch.support.SimpleJobLauncher">-->
<!--        <property name="jobRepository" ref="blogJobRepository"/>-->
<!--    </bean>-->
    <!--  jobExplorer * 3 -->
    <bean id="batchJobExplorer" primary="true" class="org.springframework.batch.core.explore.support.JobExplorerFactoryBean">
        <property name="dataSource" ref="batchDataSource"/>
    </bean>
    <bean id="licJobExplorer" class="org.springframework.batch.core.explore.support.JobExplorerFactoryBean">
        <property name="dataSource" ref="licDataSource"/>
    </bean>
    <bean id="blogJobExplorer" class="org.springframework.batch.core.explore.support.JobExplorerFactoryBean">
        <property name="dataSource" ref="blogDataSource"/>
    </bean>
    <!--  jobRegistry  -->
    <bean id="commonJobRegistry" class="org.springframework.batch.core.configuration.support.MapJobRegistry"/>
    <!--  job监听器  -->
    <bean id="commonJobListener" class="com.mylog.common.batch.listener.JobListener"/>
    <!--  step监听器  -->
    <bean id="commonStepListener" class="com.mylog.common.batch.listener.StepListener"/>
    <!--  skip监听器  -->
    <bean id="commonSkipListener" class="com.mylog.common.batch.listener.SkipListener"/>
</beans>